<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <com.hl.sun.ui.widget.UnderLineNoteTextView
        android:id="@+id/note_tv_underline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="哈哈哈"
        android:textSize="14dp"
        app:noteTextColor="#FF9A27"
        app:noteTextSize="10dp"
        app:noteTopMargin="4dp"
        app:underLineTopMargin="1dp"
        app:underlineColor="#33FF9F46"
        app:underlineWidth="4dp" />

    <com.hl.sun.ui.widget.AutoLinkStyleTextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:text="我已核对付款金额，仔细阅读并同意“购买须知”及团购“用户条款”"
        android:textSize="16sp"
        app:AutoLinkStyleTextView_text_value="“购买须知”,“用户条款”" />

    <com.hl.sun.ui.widget.AutoLinkStyleTextView
        android:id="@+id/tv_start_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="活动介绍，开始以图片开头"
        android:textSize="16sp"
        app:AutoLinkStyleTextView_start_image="@drawable/avatar_1"
        app:AutoLinkStyleTextView_type="start_image" />

</LinearLayout>

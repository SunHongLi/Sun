<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="HIndicator">
        <attr name="hi_bgColor" format="color" />
        <attr name="hi_indicatorColor" format="color" />
    </declare-styleable>

    <!--AutoLinkStyleTextView-->
    <declare-styleable name="AutoLinkStyleTextView">
        <attr name="AutoLinkStyleTextView_text_value" format="string|reference" />
        <attr name="AutoLinkStyleTextView_default_color" format="color|reference" />
        <attr name="AutoLinkStyleTextView_has_under_line" format="boolean" />
        <attr name="AutoLinkStyleTextView_start_image" format="reference" />
        <attr name="AutoLinkStyleTextView_type">
            <enum name="start_image" value="0" />
            <enum name="content_text" value="1" />
        </attr>
    </declare-styleable>


    <!--下划线注脚的TextView-->
    <declare-styleable name="UnderlinedTextView">
        <!--下划线宽度-->
        <attr name="underlineWidth" format="dimension" />
        <!--下划线颜色-->
        <attr name="underlineColor" format="color" />
        <!--注脚文字颜色-->
        <attr name="noteTextColor" format="color" />
        <!--注脚文字大小-->
        <attr name="noteTextSize" format="dimension" />
        <!--注脚距离文字距离-->
        <attr name="noteTopMargin" format="dimension" />
        <!--下划线距离文字距离-->
        <attr name="underLineTopMargin" format="dimension" />
    </declare-styleable>

</resources>
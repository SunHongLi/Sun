<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hl.sun">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/snowboy"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/snowboy"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sun">
        <activity android:name=".ui.activity.UtilsActivity"></activity>
        <activity android:name=".ui.activity.RecyclerViewActivity" />
        <activity android:name=".ui.activity.TabActivity" />
        <activity android:name=".ui.activity.AnimActivity" />
        <activity
            android:name=".ui.TouchScrollActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>